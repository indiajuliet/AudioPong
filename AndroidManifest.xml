<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.indiajuliet.audiopong"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_audiopong"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.indiajuliet.audiopong.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="GameActivity" android:icon="@drawable/ic_launcher_audiopong"  android:label="@string/app_name" android:theme="@style/FullscreenTheme" android:screenOrientation="landscape" android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name="SettingsActivity" android:configChanges="orientation|keyboardHidden|screenSize" android:label="@string/app_name" android:theme="@style/FullscreenTheme" android:screenOrientation="unspecified"></activity>
        <activity android:name="GameoverActivity" android:configChanges="orientation|keyboardHidden|screenSize" android:label="@string/app_name" android:theme="@style/FullscreenTheme" android:screenOrientation="unspecified"></activity>
     
    </application>

</manifest>
